---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';

export async function getStaticPaths() {
	const posts = await getCollection('weekly', ({ data }) => (import.meta.env.PROD ? !data.draft : true));
	return posts.map((post) => ({
		params: { slug: `${post.id}.html` },
		props: post,
	}));
}

type Props = CollectionEntry<'weekly'>;

const post = Astro.props as Props;
const { Content } = await render(post);

// 从 frontmatter 中读取 TOC 配置
const { showTOC, tocMinLevel, tocMaxLevel } = post.data as any;
---

<BlogPost
	{...post.data}
	postId={post.id}
	showTOC={showTOC}
	tocMinLevel={tocMinLevel}
	tocMaxLevel={tocMaxLevel}
	backUrl='/weekly'>
	<Content />
</BlogPost>
